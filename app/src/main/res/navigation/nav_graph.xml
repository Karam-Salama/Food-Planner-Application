<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragmentHome">

    <fragment
        android:id="@+id/fragmentHome"
        android:name="com.example.foodplannerapplication.modules.home.ui.fragments.FragmentHome"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_fragmentHome_to_addMealFragment"
            app:destination="@id/addMealFragment" />
        <action
            android:id="@+id/action_fragmentHome_to_randomMealDetailFragment"
            app:destination="@id/randomMealDetailFragment" />
        <action
            android:id="@+id/action_fragmentHome_to_filteredMealsByCategoryFragment"
            app:destination="@id/filteredMealsByCategoryFragment" />
    </fragment>

    <fragment
        android:id="@+id/fragmentFavorite"
        android:name="com.example.foodplannerapplication.modules.home.ui.fragments.FragmentFavorite"
        android:label="Favorite"
        tools:layout="@layout/fragment_favorite"/>

    <fragment
        android:id="@+id/fragmentSearch"
        android:name="com.example.foodplannerapplication.modules.home.ui.fragments.FragmentSearch"
        android:label="Search"
        tools:layout="@layout/fragment_search"/>

    <fragment
        android:id="@+id/fragmentSetting"
        android:name="com.example.foodplannerapplication.modules.home.ui.fragments.FragmentSetting"
        android:label="Settings"
        tools:layout="@layout/fragment_setting"/>

    <fragment
        android:id="@+id/fragmentDashboard"
        android:name="com.example.foodplannerapplication.modules.home.ui.fragments.FragmentDashboard"
        android:label="Dashboard"
        tools:layout="@layout/fragment_dashboard">

        <argument
            android:name="username"
            android:defaultValue="User"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_fragmentDashboard_to_fragmentHome"
            app:destination="@id/fragmentHome" />
        <action
            android:id="@+id/action_fragmentDashboard_to_fragmentSetting"
            app:destination="@id/fragmentSetting" />
        <action
            android:id="@+id/action_fragmentDashboard_to_fragmentSearch"
            app:destination="@id/fragmentSearch" />
        <action
            android:id="@+id/action_fragmentDashboard_to_fragmentFavorite"
            app:destination="@id/fragmentFavorite" />

    </fragment>
    <fragment
        android:id="@+id/addMealFragment"
        android:name="com.example.foodplannerapplication.modules.home.ui.fragments.AddMealFragment"
        android:label="fragment_add_meal"
        tools:layout="@layout/fragment_add_meal" />
    <fragment
        android:id="@+id/randomMealDetailFragment"
        android:name="com.example.foodplannerapplication.modules.home.ui.fragments.RandomMealDetailFragment"
        android:label="fragment_random_meal_detail"
        tools:layout="@layout/fragment_random_meal_detail" />
    <fragment
        android:id="@+id/filteredMealsByCategoryFragment"
        android:name="com.example.foodplannerapplication.modules.home.ui.fragments.FilteredMealsByCategoryFragment"
        android:label="fragment_filtered_meals_by_category"
        tools:layout="@layout/fragment_filtered_meals_by_category" />

</navigation>
